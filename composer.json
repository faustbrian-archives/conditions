{
    "name": "kodekeep/conditions",
    "description": "A human-friendly interface for common conditional checks.",
    "keywords": [
        "kodekeep",
        "conditions"
    ],
    "homepage": "https://github.com/kodekeep/conditions",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@kodekeep.com",
            "homepage": "https://kodekeep.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/support": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "graham-campbell/analyzer": "^2.4",
        "phpstan/phpstan": "^0.12.11",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "KodeKeep\\Conditions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KodeKeep\\Conditions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html=.coverage --coverage-clover=clover.xml",
        "format": "vendor/bin/php-cs-fixer fix ./",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
